<EditForm Model="@apartment" OnValidSubmit="@OnValidSubmit">
    <DataAnnotationsValidator />
    <div class="form-group">
        <label>Area :</label>
        <div>
            <InputNumber @bind-Value="@apartment.Area" />
            <ValidationMessage For="@(() => apartment.Area)" />
        </div>
    </div>
    <div class="form-group ">
        <div>
            <label>Address :</label>
            <div>
                <InputText @bind-Value="@apartment.Address" />
                <ValidationMessage For="@(() => apartment.Address)" />
            </div>
        </div>
    </div>
    <div class="form-group ">
        <div>
            <label>Tenants count :</label>
            <div>
                <InputNumber @bind-Value="@apartment.TenantsCount" />
                <ValidationMessage For="@(() => apartment.TenantsCount)" />
            </div>
        </div>
    </div>
    <button type="submit" class="btn btn-success">
        @ButtonText
    </button>
</EditForm>
@code {
    [Parameter] public Apartment apartment { get; set; }
    [Parameter] public string ButtonText { get; set; } = "Save";
    [Parameter] public EventCallback OnValidSubmit { get; set; }
}