@model WebApplication1.Pages.Tenant.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Tenants</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Tenants.Id" />
            <div class="form-group">
                <label asp-for="Tenants.FirstName" class="control-label"></label>
                <input asp-for="Tenants.FirstName" class="form-control" />
                <span asp-validation-for="Tenants.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tenants.LastName" class="control-label"></label>
                <input asp-for="Tenants.LastName" class="form-control" />
                <span asp-validation-for="Tenants.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tenants.FatherName" class="control-label"></label>
                <input asp-for="Tenants.FatherName" class="form-control" />
                <span asp-validation-for="Tenants.FatherName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tenants.AccountNumber" class="control-label"></label>
                <input asp-for="Tenants.AccountNumber" class="form-control" />
                <span asp-validation-for="Tenants.AccountNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tenants.ApartmentId" class="control-label"></label>
                <select asp-for="Tenants.ApartmentId" class="form-control" asp-items="ViewBag.ApartmentId"></select>
                <span asp-validation-for="Tenants.ApartmentId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
